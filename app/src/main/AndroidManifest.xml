<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.jjz.energy">

    <!--允许网络-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取设备的网络状态，鉴权所需网络代理-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--获取设备网络状态，禁用后无法获取网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!--这个权限用于访问GPS定位-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!--允许sd卡写权限，需写入地图数据，禁用后无法显示地图-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--读取设备硬件信息，统计数据-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--读取系统信息，包含系统版本等信息，用作统计-->
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />

    <uses-permission android:name="android.permission.WRITE_SETTINGS"
                     tools:ignore="ProtectedPermissions"/>

    <!--这个权限用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!--使用步行AR导航，配置Camera权限-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--程序在手机屏幕关闭后后台进程仍然运行-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--打电话-->
    <uses-permission android:name="android.permission.CALL_PHONE" />


    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <!--zxing-->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.jjz.energy.base.BaseApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="com.jjz.energy.ui.SplashActivity"
            android:theme="@style/AppSplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="IBcaSkcRLxGyVs6pqqLscuciCOpVFI1E" />
        <!--定位组件-->
        <service android:name="com.baidu.location.f"
                 android:enabled="true"
                 android:process=":remote"/>
        <!--********************* Activ-ity *********************-->

        <!--主页-->
        <activity
            android:name="com.jjz.energy.ui.MainActivity"
            android:theme="@style/MainTheme"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"/>

        <!--搜索页-->
        <activity
            android:name=".ui.home.SearchActivity"
            android:configChanges="orientation|screenSize"/>

        <!--登录-->
        <activity
            android:name="com.jjz.energy.ui.login.PhoneLoginActivity"
            android:configChanges="orientation|screenSize"/>

        <!--获取验证码-->
        <activity android:name="com.jjz.energy.ui.login.GetVCodeActivity"
                  android:configChanges="orientation|screenSize"/>

        <!--zxing-->
        <activity
            android:name="com.jjz.energy.zxing.android.CaptureActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <!--****************** 支付****************** -->

        <!--微信-->
        <activity
            android:name="com.jjz.energy.wxapi.WXEntryActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme" />
        <!--微信支付回调-->
        <activity
            android:name="com.jjz.energy.wxapi.WXPayEntryActivity"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!--*********************项目级通用工具配置*********************-->

        <!--全尺寸屏幕适配-->
        <meta-data
            android:name="design_width_in_dp"
            android:value="360"/>
        <meta-data
            android:name="design_height_in_dp"
            android:value="640"/>
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <!--******************************** 第三方********************* -->

        <!--bugly-->
        <activity
            android:name="com.tencent.bugly.beta.ui.BetaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale"
            android:theme="@android:style/Theme.Translucent" />

        <!--bugly的provider-->
        <provider
            android:name="com.jjz.energy.provider.BuglyFileProvider"
            android:authorities="com.jjz.energy.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:replace="name,authorities,exported,grantUriPermissions">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"
                tools:replace="name,resource" />
        </provider>
        <!-- matisse 图片选择器文件过滤 -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.jjz.energy.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

    </application>

</manifest>