<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
        <shape>
            <corners android:topLeftRadius="5dp" android:topRightRadius="0dp" android:bottomLeftRadius="5dp" android:bottomRightRadius="0dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:state_checked="false" >
        <shape >
            <stroke android:width="0.75dp" android:color="#ffffff" />
            <corners android:topLeftRadius="5dp" android:topRightRadius="0dp" android:bottomLeftRadius="5dp" android:bottomRightRadius="0dp" />
            <solid android:color="@color/red_fe8977" />
        </shape>
    </item>
</selector>