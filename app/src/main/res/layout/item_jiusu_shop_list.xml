<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:background="@color/white">


    <ImageView
        android:id="@+id/item_img_shop"
        android:layout_width="@dimen/dp_72"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="11dp"
        android:layout_height="@dimen/dp_72"/>

    <TextView
        android:layout_marginTop="3dp"
        android:id="@+id/item_tv_shop_name"
        android:layout_alignTop="@id/item_img_shop"
        android:layout_width="wrap_content"
        android:text="糖果量贩式KTV（衡阳店）"
        android:includeFontPadding="false"
        android:textColor="@color/text_black28"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/item_img_shop"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />


    <LinearLayout
        android:id="@+id/ll_rating"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/item_tv_shop_name"
        android:layout_alignStart="@id/item_tv_shop_name"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/item_tv_favorable_rate"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:text="89%好评率"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/red_fe8977"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/item_tv_consume"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:text="30/人"
            android:textSize="13sp"
            android:textColor="@color/text_blackA6"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_tv_distance"
        android:layout_alignTop="@id/ll_rating"
        android:layout_width="wrap_content"
        android:text="11km"
        android:textStyle="bold"
        android:textColor="@color/text_blackA6"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/item_tv_area_and_type"
            android:layout_marginTop="6dp"
            android:layout_below="@id/ll_rating"
            android:layout_alignStart="@id/ll_rating"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_blackA6"
            android:text="蒸湘区丨量版式KTV"
            android:layout_height="wrap_content"/>



    <View
        android:layout_below="@id/item_img_shop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg_f7"/>

</RelativeLayout>