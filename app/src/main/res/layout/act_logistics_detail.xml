<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">


    <include layout="@layout/view_tool_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/color_primary_f5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_logistics_list"
                android:paddingTop="8dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/tv_time_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:text="今天1点 装货"
                    android:textColor="#292929"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="18dp"
                    android:text="昨天21.00发布更新"
                    android:textColor="#b5b5b5"
                    android:textSize="12sp"/>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/tv_time"
                    android:layout_marginTop="8dp"
                    android:background="#f7f7f7"/>


                <LinearLayout
                    android:id="@+id/ll_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="#fe8977"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:ellipsize="end"
                            android:maxEms="13"
                            android:maxLines="1"
                            android:text="南昌绿地中央广场"
                            android:textColor="#494949"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tv_first_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="3dp"
                            android:ellipsize="end"
                            android:maxEms="13"
                            android:maxLines="1"
                            android:text="江西省红谷滩东湖区双子塔"
                            android:textColor="#b5b5b5"
                            android:textSize="11sp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_ll_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_first"
                    android:layout_alignStart="@id/ll_first"
                    android:layout_marginStart="3dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:background="#ededed"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="13dp"
                        android:background="#ededed"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_ll_mark"
                    android:layout_marginStart="11dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="#89c997"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_tv_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:ellipsize="end"
                            android:maxEms="13"
                            android:maxLines="1"
                            android:text="人民大会堂"
                            android:textColor="#494949"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/item_tv_end_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="3dp"
                            android:ellipsize="end"
                            android:maxEms="13"
                            android:maxLines="1"
                            android:text="北京市朝阳区麦丽莲梦露"
                            android:textColor="#b5b5b5"
                            android:textSize="11sp"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/ll_first"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="26dp"
                    android:text="里程最短约663km"
                    android:textColor="@color/red_fe8977"
                    android:textSize="11sp"/>


                <TextView
                    android:id="@+id/tv_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_distance"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="27dp"
                    android:background="@drawable/bg_tv_map"
                    android:drawableStart="@mipmap/ic_location"
                    android:drawablePadding="4dp"
                    android:paddingLeft="9dp"
                    android:paddingTop="7dp"
                    android:paddingRight="9dp"
                    android:paddingBottom="7dp"
                    android:text="查看地图"
                    android:textColor="@color/red_fe8977"
                    android:textSize="13sp"/>

                <View
                    android:layout_width="0.7dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/ll_first"
                    android:layout_alignBottom="@id/ll_end"
                    android:layout_marginRight="30dp"
                    android:layout_toLeftOf="@id/tv_map"
                    android:background="#d5d5d5"/>


                <android.support.v7.widget.CardView
                    android:id="@+id/cv_weight"
                    android:layout_width="57dp"
                    android:layout_height="23dp"
                    android:layout_below="@id/ll_end"
                    android:layout_alignLeft="@id/ll_end"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="#cce198"
                    app:cardCornerRadius="2dp">

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="5吨"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_volume"
                    android:layout_width="57dp"
                    android:layout_height="23dp"
                    android:layout_alignTop="@id/cv_weight"
                    android:layout_marginLeft="6dp"
                    android:layout_toEndOf="@id/cv_weight"
                    app:cardBackgroundColor="#acd598"
                    app:cardCornerRadius="2dp">

                    <TextView
                        android:id="@+id/tv_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="48方"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>

                </android.support.v7.widget.CardView>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/color_primary_f5"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="货物信息"
                android:textColor="@color/text_black33"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/color_primary_f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物名称"
                    android:textColor="#292929"
                    android:textSize="13sp"/>


                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47dp"
                    android:text="沙子"
                    android:textColor="@color/text_a4"
                    android:textSize="13sp"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/color_primary_f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物价值"
                    android:textColor="#292929"
                    android:textSize="13sp"/>


                <TextView
                    android:id="@+id/tv_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47dp"
                    android:text="10000元"
                    android:textColor="@color/text_a4"
                    android:textSize="13sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/color_primary_f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物重量"
                    android:textColor="#292929"
                    android:textSize="13sp"/>


                <TextView
                    android:id="@+id/tv_item_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47dp"
                    android:text="5吨"
                    android:textColor="@color/text_a4"
                    android:textSize="13sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/color_primary_f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物体积"
                    android:textColor="#292929"
                    android:textSize="13sp"/>


                <TextView
                    android:id="@+id/tv_item_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47dp"
                    android:text="25立方米"
                    android:textColor="@color/text_a4"
                    android:textSize="13sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/color_primary_f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="35dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重要说明"
                    android:textColor="#292929"
                    android:textSize="13sp"/>


                <TextView
                    android:id="@+id/tv_item_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="联系我时，说你是久速软件上的司机，看到的，谢谢"
                    android:textColor="@color/text_a4"
                    android:textSize="13sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/color_primary_f5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="订单信息"
                android:textColor="@color/text_black33"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/color_primary_f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发&#8194;货&#8194;人："
                    android:textColor="#292929"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="47dp"
                    android:text="周润发"
                    android:textColor="@color/text_a4"
                    android:textSize="13sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/color_primary_f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:paddingRight="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式："
                    android:textColor="#292929"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_sender_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="47dp"
                    android:text="18654511252"
                    android:textColor="@color/text_a4"
                    android:textSize="13sp"/>

                <ImageView
                    android:id="@+id/img_sender_phone"
                    android:layout_width="23dp"
                    android:src="@mipmap/ic_phone"
                    android:layout_height="23dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/color_primary_f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收&#8194;货&#8194;人："
                    android:textColor="#292929"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="47dp"
                    android:text="周星驰"
                    android:textColor="@color/text_a4"
                    android:textSize="13sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/color_primary_f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:paddingEnd="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式："
                    android:textColor="#292929"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_receiver_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="47dp"
                    android:text="18654512345"
                    android:textColor="@color/text_a4"
                    android:textSize="13sp"/>

                <ImageView
                    android:id="@+id/img_receiver_phone"
                    android:layout_width="23dp"
                    android:src="@mipmap/ic_phone"
                    android:layout_height="23dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:background="@color/color_primary_f5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="电议"
                android:textColor="#565656"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="货主期望"
                    android:textSize="11sp"
                    android:textColor="#b5b5b5"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="¥3500"
                    android:textSize="11sp"
                    android:textColor="#fe8977"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_call_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:cardBackgroundColor="@color/red_fe8977"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="点击联系货主"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>