<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent">

    <include layout="@layout/view_tool_bar"/>

    <RelativeLayout
        android:id="@+id/rl_alipay"
        android:visibility="gone"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/bg_white_radius"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/img_alipay"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="29dp"
            android:src="@mipmap/ic_alipay"/>

        <TextView
            android:id="@+id/tv_alipay_name"
            android:layout_width="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@id/img_alipay"
            android:text="周杰伦"
            android:textSize="14sp"
            android:textColor="@color/text_black33"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_alipay_phone"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/img_alipay"
            android:layout_below="@id/tv_alipay_name"
            android:layout_marginTop="1dp"
            android:text="13695028850"
            android:textSize="13sp"
            android:textColor="#b8b8b8"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_alipay_update"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:text="编辑"
            android:textColor="#a9a9a9"
            android:textSize="13sp"
            android:drawableLeft="@mipmap/ic_update"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_alipay_name"
            android:layout_height="wrap_content"/>


        <RadioButton
            android:id="@+id/rb_alipay"
            android:layout_below="@id/img_alipay"
            android:layout_marginTop="8dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:textSize="13sp"
            android:drawablePadding="7dp"
            android:checked="false"
            android:textColor="#727272"
            android:button="@null"
            android:drawableLeft="@drawable/mine_account_rb_selector"
            android:layout_width="wrap_content"
            android:text="设为默认"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_wechat"
        android:paddingLeft="13dp"
        android:visibility="gone"
        android:paddingRight="13dp"
        android:paddingBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/bg_white_radius"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/img_wechat"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="29dp"
            android:src="@mipmap/ic_wechat"/>

        <TextView
            android:id="@+id/tv_wechat_name"
            android:layout_width="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@id/img_wechat"
            android:text="周杰伦"
            android:textSize="14sp"
            android:textColor="@color/text_black33"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_wechat_phone"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/img_wechat"
            android:layout_below="@id/tv_wechat_name"
            android:layout_marginTop="1dp"
            android:text="13695028850"
            android:textSize="13sp"
            android:textColor="#b8b8b8"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_wechat_update"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:text="编辑"
            android:textColor="#a9a9a9"
            android:textSize="13sp"
            android:drawableLeft="@mipmap/ic_update"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_wechat_name"
            android:layout_height="wrap_content"/>


        <RadioButton
            android:id="@+id/rb_wechat"
            android:layout_below="@id/img_wechat"
            android:layout_marginTop="8dp"
            android:paddingTop="10dp"
            android:background="@android:color/transparent"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textSize="13sp"
            android:drawablePadding="7dp"
            android:checked="false"
            android:textColor="#727272"
            android:button="@null"
            android:drawableLeft="@drawable/mine_account_rb_selector"
            android:layout_width="wrap_content"
            android:text="设为默认"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"/>


    <TextView
        android:id="@+id/tv_add_account"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="添加收款账户"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/bg_btn_phone_login"
        android:layout_marginRight="15dp"
        android:layout_height="46dp"/>


</LinearLayout>