<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_f7"
    android:orientation="vertical">

    <include layout="@layout/view_tool_bar" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_refresh"
        app:srlEnableLoadMore="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_system"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="14dp"
                android:paddingTop="8dp"
                android:paddingRight="14dp"
                android:paddingBottom="6dp">


                <ImageView
                    android:id="@+id/img_system_notice"
                    android:layout_width="50dp"
                    android:paddingRight="7dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_message_system" />

                <TextView
                    android:id="@+id/tv_system_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@id/img_system_notice"
                    android:text="系统消息"
                    android:textColor="@color/text_black28"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_system_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_below="@id/tv_system_title"
                    android:layout_alignLeft="@id/tv_system_title"
                    android:layout_marginTop="6dp"
                    android:text="暂无系统消息"
                    android:textColor="@color/text_black75"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_system_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_system_title"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_black75"
                    android:textSize="11sp"
                    tools:text="16:08" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_bg_f7" />

            <RelativeLayout
                android:id="@+id/rl_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="14dp"
                android:paddingTop="10dp"
                android:paddingRight="14dp"
                android:paddingBottom="10dp">


                <ImageView
                    android:id="@+id/img_order_notice"
                    android:layout_width="50dp"
                    android:paddingRight="7dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_message_order" />

                <TextView
                    android:id="@+id/tv_order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@id/img_order_notice"
                    android:text="订单消息"
                    android:textColor="@color/text_black28"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_order_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_order_title"
                    android:layout_alignLeft="@id/tv_order_title"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginTop="6dp"
                    android:text="暂无订单消息"
                    android:textColor="@color/text_black75"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_order_title"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_black75"
                    android:textSize="11sp"
                    tools:text="16:08" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_bg_f7" />

            <RelativeLayout
                android:id="@+id/rl_logistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="14dp"
                android:paddingTop="10dp"
                android:paddingRight="14dp"
                android:paddingBottom="10dp">


                <ImageView
                    android:id="@+id/img_logistics_notice"
                    android:layout_width="50dp"
                    android:paddingRight="7dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_message_logistics" />

                <TextView
                    android:id="@+id/tv_logistics_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@id/img_logistics_notice"
                    android:text="物流消息"
                    android:textColor="@color/text_black28"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_logistics_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_logistics_title"
                    android:layout_alignLeft="@id/tv_logistics_title"
                    android:layout_marginTop="6dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="暂无物流消息"
                    android:textColor="@color/text_black75"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_logistics_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_logistics_title"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_black75"
                    android:textSize="11sp"
                    tools:text="16:08" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_bg_f7" />

            <RelativeLayout
                android:id="@+id/rl_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="14dp"
                android:paddingTop="10dp"
                android:paddingRight="14dp"
                android:paddingBottom="10dp">


                <ImageView
                    android:id="@+id/img_message_notice"
                    android:layout_width="50dp"
                    android:paddingRight="7dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_message_message" />

                <TextView
                    android:id="@+id/tv_message_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@id/img_message_notice"
                    android:text="留言消息"
                    android:textColor="@color/text_black28"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_message_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_message_title"
                    android:layout_alignLeft="@id/tv_message_title"
                    android:layout_marginTop="6dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="暂无留言消息"
                    android:textColor="@color/text_black75"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_message_title"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_black75"
                    android:textSize="11sp"
                    tools:text="16:08" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_evaluation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="14dp"
                android:layout_marginTop="1dp"
                android:paddingTop="10dp"
                android:paddingRight="14dp"
                android:paddingBottom="10dp">


                <ImageView
                    android:id="@+id/img_evaluation_notice"
                    android:layout_width="50dp"
                    android:paddingRight="7dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_notice_community" />

                <TextView
                    android:id="@+id/tv_evaluation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@id/img_evaluation_notice"
                    android:text="社区消息"
                    android:textColor="@color/text_black28"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_evaluation_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_evaluation_title"
                    android:layout_alignLeft="@id/tv_evaluation_title"
                    android:layout_marginTop="6dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="暂无社区消息"
                    android:textColor="@color/text_black75"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_evaluation_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_evaluation_title"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_black75"
                    android:textSize="11sp"
                    tools:text="16:08" />

            </RelativeLayout>
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>