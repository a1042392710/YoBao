<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/item_rl_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="14dp"
        android:paddingRight="4dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/item_tv_consignee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/text_black28"
            android:textSize="13sp"
            tools:text="彭于晏" />

        <TextView
            android:id="@+id/item_tv_consignee_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/item_tv_consignee_name"
            android:includeFontPadding="false"
            android:textColor="@color/text_black28"
            android:textSize="13sp"
            tools:text="13811542231" />


        <TextView
            android:id="@+id/item_tv_is_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_tv_consignee_phone"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/item_tv_consignee_phone"
            android:background="@drawable/bg_orange_solid"
            android:paddingBottom="1dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="1dp"
            android:text="默认"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/item_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_tv_consignee_name"
            android:layout_below="@id/item_tv_consignee_phone"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxEms="15"
            android:maxLines="1"
            android:textColor="@color/text_black28"
            android:textSize="13sp"
            tools:text="江西省南昌市红谷滩新区绿地双子塔" />

        <ImageView
            android:id="@+id/item_img_modify_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_address_manager_modify" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/item_rl_address"
        android:background="@color/baseBackGround" />
</RelativeLayout>