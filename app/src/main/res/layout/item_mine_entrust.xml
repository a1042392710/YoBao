<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_white_radius"
    android:padding="10dp">


    <ImageView
        android:id="@+id/item_img_head"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="15dp"
        tools:src="@color/red_fe8977" />

    <TextView
        android:id="@+id/item_tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/item_img_head"
        android:includeFontPadding="false"
        android:text="南昌彭于晏"
        android:textColor="@color/text_black33"
        android:textSize="11sp" />


    <TextView
        android:id="@+id/item_tv_order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:text="进行中"
        android:textColor="@color/red_fd3c3c"
        android:textSize="11sp" />


    <TextView
        android:id="@+id/item_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_order_state"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="6dp"
        android:layout_toLeftOf="@id/item_tv_order_state"
        android:text="找一个人帮我带一瓶老干妈，要可乐味的老干妈。又有一些牛皮纸，一些洋葱"
        android:textColor="@color/text_black33"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/item_tv_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:includeFontPadding="false"
        android:text="¥100"
        android:textColor="@color/red_fd3c3c"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_tv_order_price"
        android:layout_marginRight="1dp"
        android:layout_toLeftOf="@id/item_tv_order_price"
        android:includeFontPadding="false"
        android:text="酬劳"
        android:textColor="@color/text_black33"
        android:textSize="11sp" />


    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_tv_order_price"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/color_bg_f7" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_line"
        android:gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_tv_talk"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/ic_mine_entrust_notice"
            android:text="联系他"
            android:textColor="@color/text_black33"
            android:textSize="13sp" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/item_tv_order_cancle"
            android:layout_width="wrap_content"
            android:text="取消委托"
            android:textColor="@color/red_fe8977"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_gray_solid_f7"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_tv_order_finish"
            android:layout_width="wrap_content"
            android:text="确认完成"
            android:textColor="@color/white"
            android:background="@drawable/bg_red_solid"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>