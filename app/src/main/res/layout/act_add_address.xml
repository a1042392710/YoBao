<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/baseBackGround"
    android:layout_height="match_parent">

    <include layout="@layout/view_tool_bar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="收件人："
            android:textSize="13sp"
            android:textColor="@color/text_black33"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_recipients"
            android:background="@color/white"
            android:textSize="13sp"
            android:textColor="@color/text_black28"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:hint="请填写收件人姓名"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:maxEms="15"
            android:gravity="left"
            android:paddingStart="3dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="手机号码："
            android:textSize="13sp"
            android:textColor="@color/text_black33"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_phone"
            android:background="@color/white"
            android:textSize="13sp"
            android:textColor="@color/text_black28"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:singleLine="true"
            android:inputType="phone"
            android:hint="请填写您的手机号码"
            android:layout_width="match_parent"
            android:maxEms="15"
            android:gravity="left"
            android:paddingStart="3dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="所在地区："
            android:textSize="13sp"
            android:textColor="@color/text_black33"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_select_address"
            android:layout_width="match_parent"
            android:hint="请选择所在地区"
            android:paddingBottom="17dp"
            android:textColorHint="@color/text_black75"
            android:paddingTop="17dp"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/text_black28"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="详细地址："
            android:textSize="13sp"
            android:textColor="@color/text_black33"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_detailed_address"
            android:background="@color/white"
            android:textSize="13sp"
            android:textColor="@color/text_black28"
            android:hint="请填写详细地址"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:layout_width="match_parent"
            android:gravity="left"
            android:paddingStart="3dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/ck_all_checked"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="13dp"
            android:background="@color/white"
            android:button="@null"
            android:checked="true"
            android:textColor="@color/text_black28"
            android:drawableLeft="@drawable/select_mine_footprint_rb"
            android:drawablePadding="10dp"
            android:text="设为默认地址"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:layout_weight="1.3"
            android:background="@color/red_fe8977"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>