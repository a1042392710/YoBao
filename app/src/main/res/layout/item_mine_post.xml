<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <View
        android:id="@+id/item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg_f7"/>

    <ImageView
        android:id="@+id/item_img_photo"
        android:layout_marginTop="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="13dp"
        android:layout_width="93dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/item_line"
        android:layout_height="93dp"/>
<TextView
    android:id="@+id/item_tv_content"
    android:layout_width="match_parent"
    android:layout_marginEnd="35dp"
    android:layout_toEndOf="@id/item_img_photo"
    android:text="2019年的第一天，也是我们全家人的第一站"
    android:layout_alignTop="@id/item_img_photo"
    android:layout_marginTop="5dp"
    android:textSize="14sp"
    android:textColor="@color/text_black33"
    android:ellipsize="end"
    android:maxLines="2"
    android:layout_height="wrap_content"/>

    
    <TextView
        android:id="@+id/item_tv_photo_sum"
        android:layout_width="wrap_content"
        android:text="共4张"
        android:textColor="@color/text_black99"
        android:textSize="13sp"
        android:layout_toEndOf="@id/item_img_photo"
        android:layout_alignBottom="@id/item_img_photo"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/item_tv_photo_sum"
        android:textSize="13sp"
        android:layout_marginEnd="35dp"
        android:textColor="#b9b9b9"
        android:text="7月25日"
        android:layout_height="wrap_content"/>
    

</RelativeLayout>