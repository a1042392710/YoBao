<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/color_bg_f7"
    android:layout_height="match_parent">

    <include layout="@layout/view_tool_bar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="收件人："
            android:textSize="13sp"
            android:textColor="@color/text_black75"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_recipients"
            android:background="@color/white"
            android:textSize="13sp"
            android:textColor="@color/text_black33"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:hint="请填写收件人姓名"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:maxEms="15"
            android:gravity="left"
            android:paddingStart="3dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="手机号码："
            android:textSize="13sp"
            android:textColor="@color/text_black75"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_phone"
            android:background="@color/white"
            android:textSize="13sp"
            android:textColor="@color/text_black33"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:singleLine="true"
            android:inputType="phone"
            android:hint="请填写您的手机号码"
            android:layout_width="match_parent"
            android:maxEms="15"
            android:gravity="left"
            android:paddingStart="3dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="所在地区："
            android:textSize="13sp"
            android:textColor="@color/text_black75"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_select_address"
            android:layout_width="match_parent"
            android:hint="请选择所在地区"
            android:paddingBottom="17dp"
            android:textColorHint="@color/text_black75"
            android:paddingTop="17dp"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/text_black33"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="详细地址："
            android:textSize="13sp"
            android:textColor="@color/text_black75"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_detailed_address"
            android:background="@color/white"
            android:textSize="13sp"
            android:textColor="@color/text_black33"
            android:hint="请填写详细地址"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:layout_width="match_parent"
            android:gravity="left"
            android:paddingStart="3dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_is_defult"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:textSize="13sp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@color/white"
        android:textColor="@color/red_fe8977"
        android:text="设为默认收货地址"
        android:layout_height="45dp"/>


</LinearLayout>