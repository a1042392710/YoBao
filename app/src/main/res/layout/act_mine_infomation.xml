<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <include layout="@layout/view_tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="@color/white"
                android:gravity="bottom|center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="资料完善："
                    android:textColor="@color/text_black33"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textColor="@color/red_fe8977"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="%"
                    android:textColor="@color/red_fe8977"
                    android:textSize="13sp" />

            </LinearLayout>


            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="25dp"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar_layer_list" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_bg_f7" />

            <LinearLayout
                android:id="@+id/ll_head"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal"
                android:paddingLeft="19dp"
                android:paddingRight="19dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="头像"
                    android:textColor="@color/text_black33"
                    android:textSize="13sp" />


                <ImageView
                    android:id="@+id/img_head"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical"
                    android:src="@color/gray_f6" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ic_right_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_bg_f7" />

            <LinearLayout
                android:id="@+id/ll_nick_name"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal"
                android:paddingLeft="19dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="昵称"
                    android:textColor="@color/text_black33"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/ic_right_arrow"
                    android:drawablePadding="8dp"
                    android:paddingRight="19dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="未设置昵称"
                    android:textColor="#969696"
                    android:textSize="13sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_bg_f7" />

            <LinearLayout
                android:id="@+id/ll_desc"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal"
                android:paddingLeft="19dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="简介"
                    android:textColor="@color/text_black33"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLength="15"
                    android:drawableRight="@mipmap/ic_right_arrow"
                    android:drawablePadding="8dp"
                    android:paddingRight="19dp"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:text="未设置简介"
                    android:textColor="#969696"
                    android:textSize="13sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_bg_f7" />

            <LinearLayout
                android:id="@+id/ll_sex"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal"
                android:paddingLeft="19dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="性别"
                    android:textColor="@color/text_black33"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:drawableRight="@mipmap/ic_right_arrow"
                    android:drawablePadding="8dp"
                    android:paddingRight="19dp"
                    android:text="请选择"
                    android:textColor="#969696"
                    android:textSize="13sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_bg_f7" />

            <LinearLayout
                android:id="@+id/ll_brithday"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal"
                android:paddingLeft="19dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="出生日期"
                    android:textColor="@color/text_black33"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_brithday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:drawableRight="@mipmap/ic_right_arrow"
                    android:drawablePadding="8dp"
                    android:paddingRight="19dp"
                    android:text="请选择"
                    android:textColor="#969696"
                    android:textSize="13sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_bg_f7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal"
                android:paddingLeft="19dp"
                android:paddingRight="19dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="手机号"
                    android:textColor="@color/text_black33"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp"
                    android:textColor="#969696"
                    android:textSize="13sp"
                    tools:text="13914221212" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_right_arrow"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_bg_f7" />

            <LinearLayout
                android:id="@+id/ll_set_password"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="19dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="登录密码"
                    android:textColor="@color/text_black33"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_password_state"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:drawableRight="@mipmap/ic_right_arrow"
                    android:drawablePadding="8dp"
                    android:paddingRight="19dp"
                    android:text="未设置"
                    android:textColor="@color/text_black99"
                    android:textSize="12sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_bg_f7" />

            <LinearLayout
                android:id="@+id/ll_receipt_address"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal"
                android:paddingLeft="19dp"
                android:paddingRight="19dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="我的地址管理"
                    android:textColor="@color/text_black33"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_right_arrow" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>