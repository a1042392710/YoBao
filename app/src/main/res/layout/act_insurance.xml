<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">


    <include
        android:id="@+id/include_title"
        layout="@layout/view_tool_bar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_title"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_banner"
                android:layout_width="match_parent"
                android:layout_height="198dp"
                android:background="@color/text_green_9ace32"/>

            <LinearLayout
                android:id="@+id/ll_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="129dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_white_radius"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="19dp"
                android:paddingRight="16dp"
                android:paddingBottom="21dp">

                <LinearLayout
                    android:id="@+id/ll_activity_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_activity_title_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="好医保"
                        android:textColor="#1d1d1d"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_activity_content_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="免费医疗金"
                        android:textColor="#777777"
                        android:textSize="10sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_activity_big_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="540"
                            android:textColor="@color/text_black33"
                            android:textSize="30sp"/>

                        <TextView
                            android:id="@+id/tv_activity_big_unit_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="元"
                            android:textColor="@color/text_black33"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="去看看"
                        android:textColor="@color/red_fe8977"
                        android:textSize="12sp"/>
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#efefef"/>

                <LinearLayout
                    android:id="@+id/ll_activity_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_activity_title_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="好医保"
                        android:textColor="#1d1d1d"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_activity_content_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="免费医疗金"
                        android:textColor="#777777"
                        android:textSize="10sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_activity_big_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="540"
                            android:textColor="@color/text_black33"
                            android:textSize="30sp"/>

                        <TextView
                            android:id="@+id/tv_activity_big_unit_two"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="元"
                            android:textColor="@color/text_black33"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="去看看"
                        android:textColor="@color/red_fe8977"
                        android:textSize="12sp"/>
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#efefef"/>

                <LinearLayout
                    android:id="@+id/ll_activity_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_activity_title_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="好医保"
                        android:textColor="#1d1d1d"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_activity_content_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="免费医疗金"
                        android:textColor="#777777"
                        android:textSize="10sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_activity_big_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="540"
                            android:textColor="@color/text_black33"
                            android:textSize="30sp"/>

                        <TextView
                            android:id="@+id/tv_activity_big_unit_three"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_width="wrap_content"
                            android:text="元"
                            android:textColor="@color/text_black33"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="去看看"
                        android:textColor="@color/red_fe8977"
                        android:textSize="12sp"/>
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:id="@+id/rv_insurance_type"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_activity"
                android:overScrollMode="never"/>

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/rv_insurance_type"
                android:background="@color/white"
                android:elevation="0.5dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_line"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:text="热门保险"
                android:textColor="@color/text_black33"
                android:textSize="18sp"/>


            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="4dp"
                android:paddingBottom="20dp"
                android:id="@+id/rv_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_text"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"/>


        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>