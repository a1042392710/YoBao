<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_tv_orderid"
            android:layout_width="0dp"
            android:text="订单编号：201904060125"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="@color/text_blackA6"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-04-06 01:25:23"
            android:textColor="@color/text_blackA6"
            android:textSize="13sp"/>

    </LinearLayout>

    <include layout="@layout/view_liner_1dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="13dp"
        android:paddingBottom="18dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/item_img_oil"
            tools:src="@mipmap/ic_share_vcode"
            android:layout_marginEnd="13dp"
            android:layout_width="63dp"
            android:layout_height="63dp"/>

        <TextView
            android:id="@+id/item_tv_title"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_black33"
            android:text="新能源油 x2"
            android:layout_toRightOf="@id/item_img_oil"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_tv_money"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/item_img_oil"
            android:text="¥0.02"
            android:textColor="@color/text_blackA6"
            android:textSize="13sp"
            android:layout_alignBottom="@id/item_img_oil"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/item_tv_status"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:text="购买成功"
            android:textSize="13sp"
            android:textColor="@color/red_fe8977"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_tv_accept_order"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginEnd="8dp"
            android:text="接受订单"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>





    </RelativeLayout>

    <include layout="@layout/view_liner_10dp"/>
</LinearLayout>