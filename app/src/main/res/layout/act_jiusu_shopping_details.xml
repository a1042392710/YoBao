<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_bg_f7"
    android:orientation="vertical">

    <include layout="@layout/view_tool_bar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_white_radius"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="商家信息"
                    android:textColor="@color/text_black33"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:includeFontPadding="false"
                    tools:text="安格式牛排自助餐厅（蒸湘店）"
                    android:textColor="@color/red_fe8977"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_location_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="石鼓区解放大道44号"
                        android:textColor="@color/text_blackA6"
                        android:textSize="@dimen/font_12sp" />

                    <TextView
                        android:id="@+id/tv_location_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="0km"
                        android:textColor="@color/text_blackA6"
                        android:textSize="@dimen/font_12sp" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_bg_f7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="咨询/发票/菜品/使用规则..."
                        android:textColor="@color/text_blackA6"
                        android:textSize="@dimen/font_12sp" />

                    <TextView
                        android:id="@+id/tv_call_shop_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/bg_gray_broke"
                        android:includeFontPadding="false"
                        android:paddingLeft="12dp"
                        android:paddingTop="6dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="6dp"
                        android:text="联系商家"
                        android:textColor="@color/text_black33"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_white_radius"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="订单信息"
                    android:textColor="@color/text_black33"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/tv_order_sn"
                    android:text="订单号："
                    android:layout_marginTop="18dp"
                    android:textColor="@color/text_black33"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_order_phone"
                    android:text="手机号："
                    android:layout_marginTop="12dp"
                    android:textColor="@color/text_black33"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_order_time"
                    android:text="付款时间："
                    android:textColor="@color/text_black33"
                    android:textSize="13sp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_order_old_money"
                    android:text="总价："
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:textColor="@color/text_black33"
                    android:textSize="13sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_order_new_money"
                    android:text="实付："
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:textColor="@color/red_fe8977"
                    android:textSize="13sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_order_vcode_sn"
                    android:text="券码："
                    android:textColor="@color/text_black33"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/img_order_vcode"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="130dp"
                    android:src="@mipmap/ic_share_vcode"
                    android:layout_marginTop="16dp"
                    android:layout_height="130dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="请妥善保管你的自提码"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/red_fe8977"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>