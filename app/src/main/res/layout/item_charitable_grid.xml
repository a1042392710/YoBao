<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginBottom="10dp"
              android:gravity="center"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="160dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray_broke"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_img_charitable"
            android:layout_width="match_parent"
            android:src="@color/zhihu_capture"
            android:layout_height="103dp"
            android:background="@drawable/bg_gray_broke_child"/>

        <TextView
            android:id="@+id/item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp"
            android:text="壹基金温暖包"
            android:maxLines="1"
            android:maxEms="12"
            android:ellipsize="end"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>

            <TextView
                android:id="@+id/item_tv_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp"
                android:layout_weight="1"
                android:text="您的每一份爱心，都能帮助到每一名受灾儿童"
                android:textColor="#a6a6a6"
                android:textSize="12sp"/>


        <ProgressBar
            android:id="@+id/pb_money"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:progress="80"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_marginLeft="6dp"
            android:progressDrawable="@drawable/progress_bar_layer_list"
            android:layout_marginTop="10dp"
            android:layout_marginRight="28dp"/>
        
        
        
        <TextView
            android:id="@+id/item_tv_money"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:layout_weight="1"
            android:text="还差412841.00元"
            android:textColor="#a6a6a6"
            android:textSize="12sp"/>
    </LinearLayout>


</LinearLayout>