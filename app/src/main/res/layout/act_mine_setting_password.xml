<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/color_bg_f7"
              android:layout_height="match_parent">

    <include layout="@layout/view_tool_bar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/color_bg_f7"/>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_input_one"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:text="原密码"
            android:textColor="#262628"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_input_one"
            android:hint="请输入原密码"
            android:textColorHint="@color/text_blackA6"
            android:textColor="@color/text_black66"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:layout_marginTop="1dp"
        android:paddingRight="18dp"
        android:background="@color/white"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:text="新密码"
            android:textColor="#262628"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_input_two"
            android:hint="请输入登录密码"
            android:textColorHint="@color/text_blackA6"
            android:textColor="@color/text_black66"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:layout_marginTop="1dp"
        android:paddingRight="18dp"
        android:background="@color/white"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:text="确认密码"
            android:textColor="#262628"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_input_three"
            android:hint="请再次输入登录密码"
            android:textColorHint="@color/text_blackA6"
            android:textColor="@color/text_black66"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_height="match_parent"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/bg_btn_orange"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="15sp"/>
</LinearLayout>