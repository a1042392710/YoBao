<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/view_tool_bar"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="35dp">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_default_head"/>

        <TextView
            android:id="@+id/tv_vip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/img_head"
            tools:text="彭于晏"
            android:textColor="#35373a"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_gift_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_vip_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/img_head"
            android:text="您还剩赠品："
            android:textColor="#929499"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_gift_text"
            android:layout_toRightOf="@id/tv_gift_text"
            android:text="0L"
            android:textColor="@color/red_fe8977"
            android:textSize="13sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@mipmap/ic_wallte">

        <TextView
            android:id="@+id/tv_vip_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginLeft="60dp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:gravity="top|left"
            android:textSize="14sp"
            tools:text="普通会员"
            android:textColor="#4f3903"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:textSize="17sp"
        android:text="会员权益"
        android:textColor="#35373a"
        android:layout_marginLeft="18dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:id="@+id/ll_pay_jiusu"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="95dp"
            android:layout_marginLeft="18dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:elevation="3dp"
            android:paddingTop="20dp"
            android:gravity="center_horizontal"
            android:layout_height="100dp">

            <ImageView
                android:src="@mipmap/ic_moeny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#35373a"
                android:textSize="13sp"
                android:layout_marginTop="20dp"
                android:text="积分折扣"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_gift"
            android:layout_width="95dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="13dp"
            android:orientation="vertical"
            android:elevation="3dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:paddingTop="18dp"
            android:layout_height="100dp">

            <ImageView
                android:src="@mipmap/ic_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#35373a"
                android:textSize="13sp"
                android:layout_marginTop="18dp"
                android:text="会员福利"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_up_vip"
            android:layout_marginLeft="13dp"
            android:layout_width="95dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="3dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:paddingTop="19dp"
            android:layout_height="100dp">

            <ImageView
                android:src="@mipmap/ic_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#35373a"
                android:textSize="13sp"
                android:layout_marginTop="16dp"
                android:text="升级等级"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:elevation="3dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="14dp"
        android:background="@color/white"
        android:layout_marginRight="18dp"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:background="#ffe289"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="6dp"
                android:text="分享有奖"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </RelativeLayout>


        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="20dp"
            android:scrollbars="none"
            tools:ignore="WebViewLayout"/>

    </LinearLayout>

    </LinearLayout>
</ScrollView>


</LinearLayout>