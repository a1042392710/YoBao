<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="138dp"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="13dp"
    android:layout_marginRight="7dp"
    android:paddingTop="15dp"
    android:background="@drawable/bg_gray_broke_ee"
    android:paddingLeft="13dp"
    android:paddingRight="13dp">

    <TextView
        android:id="@+id/item_tv_consignee"
        android:layout_width="wrap_content"
        android:text="收货人：彭于晏"
        android:textSize="15sp"
        android:textColor="#3c3c3c"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_tv_consignee_phone"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:text="13888888888"
        android:textSize="14sp"
        android:textColor="#3c3c3c"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/item_tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:drawableStart="@mipmap/ic_delete"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:text="删除"
        android:textColor="#a9a9a9"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/item_tv_address_content"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:textColor="#aaaaaa"
        android:textSize="13sp"
        android:layout_below="@id/item_tv_consignee"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="美国加利福尼亚州洛杉矶市中心菲格罗亚街上洛杉矶会议中心建筑物群旁"
        android:layout_height="wrap_content"/>




    <RadioButton
        android:id="@+id/item_rb_is_defult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:button="@null"
        android:checked="true"
        android:drawableLeft="@drawable/mine_account_rb_selector"
        android:drawablePadding="7dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="默认收货地址"
        android:textColor="#727272"
        android:textSize="13sp"/>

    <View
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/item_rb_is_defult"
        android:background="#eeeeee"/>

</RelativeLayout>