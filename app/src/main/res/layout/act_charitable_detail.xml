<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/white"
              android:orientation="vertical">
    <include
        android:id="@+id/include_title"
        layout="@layout/view_tool_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_banner"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@color/color_primary_f5"/>


            <LinearLayout
                android:id="@+id/ll_unit_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="144dp"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="49dp"
                    android:background="@drawable/bg_cicle_left_orange"
                    android:scaleType="center"
                    android:src="@mipmap/ic_hand_right"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_unit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="壹基金温暖宝"
                        android:textColor="@color/text_black33"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_unit_content"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="top|center"
                        android:maxLines="1"
                        android:text="公益组织：深圳壹基金公益基金会"
                        android:textColor="@color/text_a4"
                        android:textSize="12sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="bottom"
                        android:background="#70c2c2c2"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="49dp"
                    android:background="@drawable/bg_cicle_right_orange"
                    android:scaleType="center"
                    android:src="@mipmap/ic_hand_left"/>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_unit_info"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_stoke_gray"
                android:paddingLeft="27dp"
                android:paddingRight="27dp"
                android:paddingBottom="14dp">

                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="15dp"
                    android:progress="80"
                    android:progressDrawable="@drawable/progress_bar_layer_list"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progress"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="目标金额"
                        android:textColor="@color/text_a4"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_all_love_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="100,000"
                        android:textColor="@color/text_black33"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progress"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="爱心（份）"
                        android:textColor="@color/text_a4"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_love_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="541"
                        android:textColor="@color/red_fe8977"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progress"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="已筹金额"
                        android:textColor="@color/text_a4"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_get_love_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="60,000"
                        android:textColor="@color/red_fe8977"
                        android:textSize="14sp"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/rl_money">
                <WebView
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:minHeight="300dp"
                    android:layout_height="wrap_content"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_donate_money"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="45dp"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="@color/red_fe8977"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="我要捐款"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</LinearLayout>