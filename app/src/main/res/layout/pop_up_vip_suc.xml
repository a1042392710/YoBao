<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardCornerRadius="15dp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:text="尊敬的用户，您已升级为"
        android:textSize="15sp"
        android:textColor="@color/text_black33"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="49dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/pop_tv_title"
        android:layout_width="wrap_content"
        android:text="久速会员"
        android:textColor="@color/red_fe8977"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        android:textSize="24sp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:layout_width="105dp"
        android:src="@mipmap/ic_vip_logo"
        android:layout_height="126dp"/>

    <TextView
        android:id="@+id/pop_tv_finish"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:text="我知道了"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="27dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:background="@drawable/bg_orange_solid"
        android:textColor="@color/white"
        android:layout_height="45dp"/>

</LinearLayout>
    

</android.support.v7.widget.CardView>