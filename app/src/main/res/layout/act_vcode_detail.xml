<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/view_tool_bar"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="25dp"
        android:background="@color/white">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:text="订单号"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blackA6"
            android:textSize="13sp"
            tools:text="11565162315861261"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="25dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:text="买家昵称"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_buyer_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blackA6"
            android:textSize="13sp"
            tools:text="南昌彭于晏"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="25dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:text="买家电话"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_buyer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blackA6"
            android:textSize="13sp"
            tools:text="18611151515"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="25dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:text="下单时间"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blackA6"
            android:textSize="13sp"
            tools:text="2019-04-11 12:10:44"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="25dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:text="油价"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_oil_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blackA6"
            android:textSize="13sp"
            tools:text="4.7元/升"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="25dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:text="数量"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blackA6"
            android:textSize="13sp"
            tools:text="44升"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="25dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:text="总计"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blackA6"
            android:textSize="13sp"
            tools:text="¥916.00"/>
    </LinearLayout>



    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:text="核销订单"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:gravity="center"
        android:background="@drawable/bg_orange_solid"
        android:textColor="@color/white"
        android:layout_height="45dp"/>


</LinearLayout>