<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/bg_pay_dialog"
              android:layout_marginLeft="33dp"
              android:layout_marginRight="33dp"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/bg_recharge_orange_line"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="支付确认"
            android:textColor="@color/text_black33"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/pop_img_close"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_main_close"
            android:padding="6dp"
            android:layout_marginRight="7dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

<View
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="0.8dp"
    android:background="#ebebeb"/>
    
    
    <TextView
        android:id="@+id/pop_tv_title"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/text_black33"
        android:layout_width="match_parent"
        android:text="久速尾气清洁剂"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/pop_tv_money"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:text="0.00"
        android:textColor="@color/text_black33"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="31sp"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ebebeb"/>

    <LinearLayout
        android:id="@+id/pop_ll_wechat"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:gravity="center_vertical"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_recharge_wechat"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="微信"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>

        <RadioButton
            android:id="@+id/pop_rb_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:clickable="false"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ebebeb"/>

    <LinearLayout
        android:id="@+id/pop_ll_alipay"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:gravity="center_vertical"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_recharge_alipay"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="支付宝"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>

        <RadioButton
            android:id="@+id/pop_rb_alipay"
            android:checked="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ebebeb"/>

    <LinearLayout
        android:id="@+id/pop_ll_free_get"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        android:visibility="gone"
        android:paddingRight="13dp"
        android:gravity="center_vertical"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:src="@mipmap/ic_recharge_alipay"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="赠品领取"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/pop_tv_remaining"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0L"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/red_fe8977"
            android:textSize="13sp"/>


        <RadioButton
            android:id="@+id/pop_rb_free_get"
            android:checked="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ebebeb"/>

    <TextView
        android:textColor="#666666"
        android:textSize="10sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:text="请谨慎确认购买信息，确认购买后如需退款请致电客服-400-1070-400"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/pop_tv_pay"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_width="135dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_orange_solid"
        android:gravity="center"
        android:text="确认购买"
        android:layout_height="wrap_content"/>
</LinearLayout>