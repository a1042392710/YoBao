<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/item_img_commodity"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/item_tv_commodity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/item_img_commodity"
        android:text="久速猫粮,布偶猫粮"
        android:textColor="@color/text_black33"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/item_tv_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_img_commodity"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@id/item_img_commodity"
        android:background="@drawable/bg_orange_solid"
        android:padding="3dp"
        android:text="积分享6折"
        android:textColor="@color/white"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/item_tv_new_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/item_tv_toast"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/item_img_commodity"
        android:text="￥60"
        android:textColor="@color/red_fe8977"
        android:textSize="@dimen/font_12sp" />

    <TextView
        android:id="@+id/item_tv_old_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/item_tv_toast"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/item_tv_new_money"
        android:text="￥100"
        android:textColor="#c1c0c0"
        android:textSize="11sp" />


    <TextView
        android:id="@+id/item_tv_want_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@id/item_tv_toast"
        android:gravity="end"
        tools:text="1646人想要"
        android:textColor="#a6a6a6"
        android:textSize="12sp"/>


    <View
        android:layout_below="@id/item_img_commodity"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</RelativeLayout>