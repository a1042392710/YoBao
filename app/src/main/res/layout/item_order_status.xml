<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/item_ll_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="25dp"
            android:layout_height="25dp">


            <ImageView
                android:id="@+id/item_img_ok"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@mipmap/ic_ok" />

        </FrameLayout>

        <TextView
            android:id="@+id/item_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginTop="7dp"
            android:text="已拍下"
            android:textColor="@color/text_black28"
            android:textSize="11sp" />

    </LinearLayout>

    <View
        android:id="@+id/item_view_line"
        android:layout_toRightOf="@id/item_ll_status"
        android:layout_marginTop="13dp"
        tools:background="@color/red_fe8977"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>





</RelativeLayout>