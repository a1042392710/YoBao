<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/item_tv_new_money"
            android:layout_marginLeft="10dp"
            android:text="￥"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:textColor="@color/text_black96"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/item_et_new_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="0.00"
            android:textColorHint="@color/text_black96"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/color_bg_f7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="入手价"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/item_tv_old_money"
            android:layout_marginLeft="10dp"
            android:text="￥"
            android:textColor="@color/text_black96"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/item_et_old_moeny"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:textColorHint="@color/text_black96"
            android:maxLength="10"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/color_bg_f7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="运费"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/item_tv_freight"
            android:layout_marginLeft="10dp"
            android:text="￥"
            android:textSize="13sp"
            android:textColor="@color/text_black96"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/item_et_freight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColorHint="@color/text_black96"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="0"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>


        <CheckBox
            android:id="@+id/item_cb_shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:text="包邮"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_tv_sure"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_orange_solid"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="15sp"/>


</LinearLayout>