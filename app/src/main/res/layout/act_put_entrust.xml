<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        layout="@layout/view_tool_bar"/>

    <EditText
        android:id="@+id/et_entrust"
        android:hint="输入您的需求，您的需求将发布在委托大厅"
        android:background="@color/white"
        android:gravity="top"
        android:paddingTop="18dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="18dp"
        android:textSize="13sp"
        android:textColor="@color/text_black33"
        android:layout_width="match_parent"
        android:minHeight="142dp"
        android:maxLength="300"
        android:layout_height="wrap_content"/>



    <View
        android:layout_width="match_parent"
        android:background="@color/color_bg_f7"
        android:layout_height="1dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:paddingRight="28dp"
        android:paddingLeft="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_black6a"
            android:drawableLeft="@mipmap/ic_entrust_location"
            android:text="所在位置"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_location"
            android:textColor="@color/text_black6a"
            android:textSize="13sp"
            android:text="衡阳市·蒸湘区岳麓街"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/color_bg_f7"
        android:layout_height="1dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:paddingRight="28dp"
        android:paddingLeft="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_black6a"
            android:drawableLeft="@mipmap/ic_entrust_user"
            android:text="联系人"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_people"
            android:textColor="@color/text_black6a"
            android:textSize="13sp"
            android:background="@color/white"
            android:hint="请输入联系人"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:background="@color/color_bg_f7"
        android:layout_height="1dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:paddingRight="28dp"
        android:paddingLeft="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_black6a"
            android:drawableLeft="@mipmap/ic_entrust_money"
            android:text="设置赏金"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_money"
            android:textColor="@color/text_black6a"
            android:textSize="13sp"
            android:background="@color/white"
            android:hint="请输入金额"
            android:gravity="right"
            android:layout_width="0dp"
            android:inputType="number"
            android:maxLength="5"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/text_black6a"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="¥"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_put_entrust"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="发布"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_margin="17dp"
        android:textStyle="bold"
        android:background="@drawable/bg_orange_solid"
        android:layout_height="35dp"/>





</LinearLayout>