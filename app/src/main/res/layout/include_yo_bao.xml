<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingLeft="13dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="13dp"
        android:paddingRight="13dp"
        android:background="#f5f5f5"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="13dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Yo宝购买专区"
                android:layout_weight="1"
                android:textColor="#5e5e5e"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:text="进入地图"
                android:textSize="13sp"
                android:textColor="#a9a9a9"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_gray_right_more"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_location_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_map_location"/>

            <TextView
                android:id="@+id/tv_service_point_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:includeFontPadding="false"
                android:text="0.0公里"
                android:textColor="#666666"
                android:textSize="13sp"/>

            <View
                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#666666"/>

            <TextView
                android:id="@+id/tv_location_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxEms="13"
                android:maxLines="1"
                android:text="红谷滩绿地双子塔"
                android:textColor="#666666"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_business_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_location_distance"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_map_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:includeFontPadding="false"
                android:text="营业时间："
                android:textColor="#666666"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_business_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="周一至周日 07:00-次日01:15"
                android:textColor="#666666"
                android:textSize="13sp"/>
        </LinearLayout>

    </LinearLayout>