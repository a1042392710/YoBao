<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_white_radius"
    android:elevation="3dp"
    android:padding="10dp">


    <TextView
        android:id="@+id/item_tv_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_black33"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="牛先生牛排店" />


    <ImageView
        android:id="@+id/item_img_shop"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/item_tv_shop_name"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        tools:src="@color/red_fe8977" />

    <TextView
        android:id="@+id/item_tv_new_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_img_shop"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/item_img_shop"
        android:includeFontPadding="false"
        android:textColor="@color/red_fe8977"
        android:textSize="14sp"
        tools:text="实付：¥188" />

    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_img_shop"
        android:layout_toRightOf="@id/item_img_shop"
        android:textColor="@color/text_blackA6"
        android:textSize="12sp"
        tools:text="2017年8月15日" />

</RelativeLayout>