<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseBackGround"
    android:orientation="vertical">


    <include layout="@layout/view_tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="提现金额"
                    android:textColor="#262628"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_withdraw_deposit_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/text_black33"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:text="元"
                        android:textColor="@color/text_black33"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="真实姓名"
                    android:textColor="#262628"
                    android:textSize="13sp" />


                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:hint="请输入真实姓名"
                    android:textColor="@color/text_black45"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_id_card"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="身份证号"
                    android:textColor="#262628"
                    android:textSize="13sp" />


                <EditText
                    android:id="@+id/et_id_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:hint="请输入身份证号码"
                    android:textColor="@color/text_black45"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="银行"
                    android:textColor="#262628"
                    android:textSize="13sp" />


                <EditText
                    android:id="@+id/et_bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:singleLine="true"
                    android:hint="请输入银行名称"
                    android:textColor="@color/text_black45"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <TextView
                    android:id="@+id/tv_bank_crad"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="银行卡号"
                    android:textColor="#262628"
                    android:textSize="13sp" />


                <EditText
                    android:id="@+id/et_bank_crad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:hint="请输入银行卡号"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/text_black45"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <TextView
                    android:id="@+id/tv_account_type"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="银行预留手机"
                    android:textColor="#262628"
                    android:textSize="13sp" />


                <EditText
                    android:id="@+id/et_bank_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:hint="请输入银行预留手机号"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/text_black45"
                    android:textSize="13sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/bg_orange_solid"
                android:gravity="center"
                android:text="确定提现"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="温馨提示"
                android:textColor="#262628"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_warm_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="13dp"
                android:text="@string/withdraw_deposit_alipay_warm_prompt"
                android:textColor="@color/text_blackA6"
                android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>