<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="5dp"
              android:gravity="center"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="155dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray_broke"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_commodity"
            android:layout_width="match_parent"
            android:src="@color/zhihu_capture"
            android:layout_height="155dp"
            android:background="@drawable/bg_gray_broke_child"/>

        <TextView
            android:id="@+id/tv_commodity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="13dp"
            android:text="大众脚垫大包围专车定做专用于新途观L迈腾速腾帕萨特朗逸 双层黑色"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_commodity_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥699.00"
                android:textColor="#f92769"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="1646人想要"
                android:textColor="#a6a6a6"
                android:textSize="12sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#bcbcbc"
            android:layout_height="0.7dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@mipmap/ic_logo"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="right"
                android:text="独特的水瓶座"
                android:textColor="@color/text_black33"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>