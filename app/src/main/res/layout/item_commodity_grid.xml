<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="155dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray_broke"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_img_commodity"
            android:layout_width="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="2dp"
            android:src="@color/zhihu_capture"
            android:layout_height="155dp"
            tools:background="@drawable/bg_gray_broke_child"/>

        <TextView
            android:id="@+id/item_tv_commodity_title"
            android:layout_width="match_parent"
            android:minHeight="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="13dp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text=" 双层黑色双层黑色双层黑色双层黑色双层黑色双层黑色双层黑色双层黑色双层黑色"
            android:textColor="@color/text_black33"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tv_commodity_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥699.00"
                android:textColor="#f92769"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/item_tv_want_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                tools:text="1646人想要"
                android:textColor="#a6a6a6"
                android:textSize="12sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#bcbcbc"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_height="0.7dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_img_head"
                android:layout_width="27dp"
                android:layout_height="27dp"
                tools:src="@mipmap/ic_default_head"/>

            <TextView
                android:id="@+id/item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="right"
                tools:text="独特的水瓶座"
                android:textColor="@color/text_black33"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>