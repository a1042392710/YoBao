<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/view_tool_bar"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="40dp"
            android:src="@mipmap/ic_pay_suc"
            android:layout_marginTop="58dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="40dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="支付成功 !"
            android:textColor="@color/red_fe8977"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/tv_pay_price"
            android:layout_width="wrap_content"
            android:text="¥ 0"
            android:textSize="36sp"
            android:layout_marginTop="43dp"
            android:includeFontPadding="false"
            android:textColor="@color/text_black33"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>


        <TextView
            android:text="收款方"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:textColor="@color/text_black6a"
            android:textSize="@dimen/font_12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_shop"
            android:layout_width="48dp"
            android:src="@color/red_fe8977"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_height="48dp"/>

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/text_black33"
            android:textSize="@dimen/font_12sp"
            android:layout_gravity="center_horizontal"
            tools:text="安格式牛排"
            android:layout_height="wrap_content"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="0dp"
            android:layout_weight="1">


            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_black33"
                android:text="支付时间："
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_pay_time"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:textColor="@color/text_black33"
                tools:text="2019.01.01 19:12"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="完成"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:background="@drawable/bg_orange_solid"
            android:textColor="@color/white"/>
    </LinearLayout>
</ScrollView>


</LinearLayout>