<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    
    
    <ImageView
        android:id="@+id/item_img_photo"
        android:layout_width="88dp"
        android:layout_height="115dp"/>

<TextView
    android:id="@+id/item_tv_title"
    android:layout_width="match_parent"
    android:layout_toRightOf="@id/item_img_photo"
    android:layout_marginLeft="16dp"
    android:textSize="15sp"
    android:maxLines="1"
    android:ellipsize="end"
    android:textColor="@color/text_black33"
    android:text="成人意外险2019"
    android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/item_tv_content"
        android:layout_below="@id/item_tv_title"
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/item_img_photo"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/text_a4"
        android:text="升级！市面最低价，保额翻倍可达100w意外0免赔，100%报销"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/item_tv_moeny"
        android:layout_width="wrap_content"
        android:text="60"
        android:includeFontPadding="false"
        android:textColor="@color/red_fe8977"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:layout_toRightOf="@id/item_img_photo"
        android:layout_alignBottom="@id/item_img_photo"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="元"
        android:textSize="11sp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/item_tv_moeny"
        android:layout_alignTop="@id/item_tv_moeny"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_a4"
        android:layout_height="wrap_content"/>

    
    
    <android.support.v7.widget.CardView
        android:id="@+id/item_cv_buy"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/item_img_photo"
        android:layout_width="70dp"
        app:cardBackgroundColor="@color/red_fe8977"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        android:layout_height="27dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="立即投保"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>


</RelativeLayout>