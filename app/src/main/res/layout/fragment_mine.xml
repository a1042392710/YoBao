<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f7f7f7"
              android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:minHeight="190dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_mine_bg">

                <View
                    android:id="@+id/view_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/status_bar_height"/>

                <ImageView
                    android:id="@+id/img_head"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_below="@id/view_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:src="@mipmap/ic_default_head"/>


                <ImageView
                    android:id="@+id/img_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_title"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="13dp"
                    android:padding="5dp"
                    android:scaleType="center"
                    android:src="@mipmap/ic_setting"/>


                <TextView
                    android:id="@+id/tv_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_head"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:text="未设置昵称"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_nick_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_like_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="关注 0"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/white"/>

                    <TextView
                        android:id="@+id/tv_fans_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="粉丝 0"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/bg_white_radius"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:id="@+id/ll_mine_release"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/ic_mine_put"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="我发布的"
                        android:textColor="#9d9d9e"
                        android:textSize="10sp"/>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll_mine_buyer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/ic_mine_buy"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="我买到的"
                        android:textColor="#9d9d9e"
                        android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mine_seller"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/ic_mine_sell"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="我卖出的"
                        android:textColor="#9d9d9e"
                        android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mine_like"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/ic_mine_like"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="我收藏的"
                        android:textColor="#9d9d9e"
                        android:textSize="10sp"/>
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/bg_white_radius"
                android:overScrollMode="never"
                android:paddingBottom="15dp"
                android:scrollbars="none"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/bg_white_radius"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:drawableRight="@mipmap/ic_right_arrow"
                    android:gravity="center_vertical"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="意见反馈"
                    android:textColor="#9d9d9e"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="#f7f7f7"/>


                <TextView
                    android:id="@+id/tv_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:drawableRight="@mipmap/ic_right_arrow"
                    android:gravity="center_vertical"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="关于我们"
                    android:textColor="#9d9d9e"
                    android:textSize="12sp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="#f7f7f7"/>


                <TextView
                    android:id="@+id/tv_shop_go"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:drawableRight="@mipmap/ic_right_arrow"
                    android:gravity="center_vertical"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="商家入驻"
                    android:textColor="#9d9d9e"
                    android:textSize="12sp"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>