<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="8dp"
    android:paddingBottom="6dp"
    android:paddingRight="14dp"
    android:paddingLeft="14dp">


    <ImageView
        android:id="@+id/img_notice"
        android:layout_width="44dp"
        android:layout_height="44dp" />

    <TextView
        android:id="@+id/item_tv_title"
        android:layout_width="wrap_content"
        android:textColor="@color/text_black28"
        android:textSize="14sp"
        android:layout_toRightOf="@id/img_notice"
        android:layout_marginLeft="11dp"
        android:layout_height="wrap_content"
        android:text="每日签到" />

    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:textColor="@color/text_black75"
        android:textSize="11sp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_tv_title"
        android:layout_below="@id/item_tv_title"
        android:layout_marginTop="6dp"
        android:text="您购物车中【百雀羚  水润保湿甄选9件套..." />

    <TextView
        android:textSize="11sp"
        android:textColor="@color/text_black75"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/item_tv_title"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="16:08" />


    <View
        android:layout_below="@id/item_tv_time"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_bg_f7"/>
</RelativeLayout>