<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/img_close"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/ic_main_close"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发帖子"
            android:textColor="@color/text_black33"
            android:textSize="15sp"/>

    </RelativeLayout>
    
    
    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="170dp"
        android:gravity="top"
        android:textColor="@color/text_black66"
        android:textColorHint="#a9a9a9"
        android:maxLength="300"
        android:textSize="12sp"
        android:padding="18dp"
        android:hint="记录这一刻，分享给更懂你的人..."
        android:background="@color/white"/>

    <TextView
        android:layout_marginRight="18dp"
        android:text="最多300字"
        android:textSize="12sp"
        android:textColor="#a9a9a9"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_select_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:paddingLeft="20dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/bg_orange_solid"
        android:gravity="center"
        android:text="发布"
        android:layout_marginBottom="29dp"
        android:textColor="@color/white"
        android:textSize="15sp"/>

</LinearLayout>